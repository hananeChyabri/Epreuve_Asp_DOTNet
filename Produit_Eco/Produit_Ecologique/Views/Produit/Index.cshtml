@model IEnumerable<Produit_Ecologique.Models.ProduitListItemViewModels>

@{
    ViewData["Title"] = "Index";
}


<div class="col-md-12">
    <form asp-action="GetAllProduct" method="get">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <input name="search" class="form-control custom-input" placeholder="Recherche par nom..." />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <!--  pour la catégorie -->
                </div>
            </div>
            <div class="col-md-4">

       
              <div class="form-group">
            <input type="submit" value="Search" class="btn btn-primary" />
            </div>
            </div>
        </div>
    </form>
</div>
<h1> Our popular products</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
              image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_Vente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EcoScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>

                    <img src="~/assets/imgs/@(item.Media.FirstOrDefault()?.url_image)" style="width: 200px; height: 200px;" />
                </td>
               
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Vente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EcoScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id_Produit }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id_Produit }) |
                    @Html.ActionLink("Delete", "Delete", new {  id=item.Id_Produit })
            </td>
        </tr>
         
}
    </tbody>
</table>
<p>
    <a asp-action="GetAllProduct">Show all products</a>
</p>
