@model IEnumerable<Produit_Ecologique.Models.ProduitListItemViewModels>

@{
    ViewData["Title"] = "Index";
}


<partial name="_RechercheFormPartialView" />
<h1> Our popular products</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
              image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_Vente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EcoScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>

                    <img src="~/assets/imgs/@(item.Media.FirstOrDefault()?.url_image)" style="width: 200px; height: 200px;" />
                </td>
               
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
                <td style="width: 300px">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Vente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EcoScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id_Produit } ,new { @class = "btn btn-primary" }) 
                    @Html.ActionLink("Details", "Details", new { id=item.Id_Produit }, new { @class = "btn btn-primary" }) 
                    @Html.ActionLink("Delete", "Delete", new {  id=item.Id_Produit } , new { @class = "btn btn-primary" })
                    @Html.ActionLink("Ajouter", "AddToCart","Panier", new {  id=item.Id_Produit } , new { @class = "btn btn-primary" })
            </td>
        </tr>
         
}
    </tbody>
</table>
<p>
    <a asp-action="GetAllProduct">Show all products</a>
</p>
